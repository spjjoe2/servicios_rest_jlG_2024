package service;

import java.util.List;

import org.springframework.stereotype.Service;

import dao.ClientesDao;
import entities.Cliente;


@Service
public class ClientesServiceImpl implements ClientesService {	
	
	 
	ClientesDao clientesDao;
	
	
	public ClientesServiceImpl(ClientesDao clientesDao) {
		super();
		this.clientesDao = clientesDao;
	}


	public Cliente findById(String usuario) {
		return clientesDao.findById(usuario);	 
				 		
	}	
	
	
	public List<Cliente> findByLocalizacion(String localizacion){
		return hotelesDao.findByLocalizacion(localizacion) 
				.stream() 	 
				.toList();		
	}
	
	
	 	
	Cliente findByUserYPwd(String ususrio,String password) {
		return clientesDao.findByUsrYPwd(ususrio, password):
	} 
	
	
	void altaCliente(Cliente cliente) {
		clientesDao.save(cliente);
	}
 
}


 